<div class="form-horizontal">
	Adding book to {{library.name}}
    <div class="form-group">
        <label class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
          {{input type="text" value=book.title class="form-control" placeholder="The title of the book"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Author</label>
        <div class="col-sm-10">
          {{input type="text" value=author.name class="form-control" placeholder="The author of the book"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Release Year</label>
        <div class="col-sm-10">
          {{input type="text" value=book.releaseYear class="form-control" placeholder="The book's release year"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'saveBook' book library author }}>Save book</button>
        </div>
    </div>
</div>

